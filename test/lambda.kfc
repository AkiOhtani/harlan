(module

  (define-datatype Expr
    (variable int)
    (lambda Expr)
    (app Expr Expr))

  (define (subs e i v)
    (match e
      ((variable n)
       (if (= n i)
           v
           (variable n)))
      ((lambda e)
       (lambda (subs e (+ 1 i) v)))
      ((app e1 e2)
       (app (subs e1 i v) (subs e2 i v)))))

  (define (stepe e)
    (match e
      ((variable n) (variable n))
      ((lambda e) (lambda e))
      ((app e1 e2)
       (match e1
         ((variable n) (app (variable n) e2))
         ((lambda e)
          (subs e 0 e2))
         ((app e1 e2)
          (app (stepe e1) e2))))))

  (define (main)
    (let ((e (app (lambda (variable 0)) (lambda (variable 0)))))
      (stepe e))
    (return 0))
  )
