;; -*- scheme -*-

;; Reducing within a kernel.

(module
  (define (main)
    (let ((A (vector
              (vector 1 2 3)
              (vector 4 5 6))))
      (let ((B (kernel ((a A))
                 (reduce + a))))
        (for (i 0 (length B))
          (print (vector-ref B i))
          (print "\n"))
        (assert (= (vector-ref B 0) 6))
        (assert (= (vector-ref B 1) 15))))
    (return 0)))
