;; -*- scheme -*-

(module
  (extern write_pgm (str (vector (vector int 1024) 1024)) -> void)
  (extern nanotime () -> u64)
  
  (fn main ()
      (let start (nanotime))
      (let img (kernel ((i (iota 1024)))
                       (kernel ((j (iota 1024)))
                               (let cr (- (/ (int->float j) 512.0) 1.5))
                               (let ci (- (/ (int->float i) 512.0) 1.0))
                               (let xr 0.0)
                               (let xi 0.0)
                               (let idx 0)
                               (let escape 0)
                               (while (< idx 256)
                                 (let xrp (+ (- (* xr xr) (* xi xi)) cr))
                                 (let xip (+ (* 2.0 (* xr xi)) ci))
                                 (set! xr xrp)
                                 (set! xi xip)
                                 (let m (+ (* xr xr) (* xi xi)))
                                 (if (< m 4.0)
                                   ;; Why do the pixels all turn white
                                   ;; if I just do (set! escape idx)?
                                   (set! escape (- idx 1)))
                                 (set! idx (+ idx 1)))
                               escape)))
      (let stop (nanotime))
      (write_pgm "test.bin/mandelbrot.pgm" img)
      (print "Time to generate Mandelbrot Set in milliseconds:")
      (print (/ (- stop start) 1000000))
      (return 0)))
