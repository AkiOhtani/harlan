;; Dense dot product between two vectors.

(%testspec
 (%tags bench))

(module
  (extern nanotime () -> u64)

  (define (dot X Y)
    (reduce + (kernel ((x X) (y Y))
                (* x y))))
  
  (define (do-dot len)
    (let ((X (make-vector len 1))
          (Y (make-vector len 1)))
      (let ((start (nanotime)))
        (let ((d (dot X Y)))
          (let ((stop (nanotime)))
            (assert (= d len))
            (- stop start))))))
  
  (define (bench_length len)
    (let ((time (do-dot len)))
      (print len)
      (print "\t")
      (print (/ time 1000))
      (print "\n")))
  
  (define (main)
    (for (i 1 21)
      (bench_length (* i 1000000)))
    (return 0)))

