;; Dense dot product between two vectors.

(%testspec
 (iterate
  (iters (range 10 10))
  (len (range 100000 10000000 100000))))

(module
  (extern nanotime () -> u64)
  
  (define (main)
    (let ((ttime 0))
      (for (k 0 iters)
        (let ((X (make-vector len 1))
              (Y (make-vector len 1)))
          (let ((start (nanotime)))
            (let ((dot (reduce + (kernel ((x X) (y Y))
                                   (* x y)))))
              (let ((stop (nanotime)))
                (set! ttime (+ ttime (- stop start)))
                (assert (= dot len)))))))
      (print len)
      (print "\t")
      (print (/ (/ ttime 1000) iters)))
      (return 0)))

