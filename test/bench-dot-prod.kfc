;; Dense dot product between two vectors.

(%testspec
 (%tags bench))

(module
  (extern nanotime () -> u64)

  (define (dot len)
    (let ((X (make-vector len 1))
          (Y (make-vector len 1)))
      (let ((start (nanotime)))
        (let ((dot (reduce + (kernel ((x X) (y Y))
                               (* x y)))))
          (let ((stop (nanotime)))
            (assert (= dot len))
            (- stop start))))))
  
  (define (bench_length len)
    (let ((iters 10)
          (ttime 0))
      (for (k 0 iters)
        (set! ttime (+ ttime (dot len))))
      (print len)
      (print "\t")
      (print (/ (/ ttime 1000) iters))
      (print "\n")))
  
  (define (main)
    (for (i 1 100)
      (bench_length (* i 100000)))
    (return 0)))

