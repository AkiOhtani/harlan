;; -*- scheme -*-

(%testspec
  (iterate
    (max_iter (range 1 5000 100))))

(module
  (extern nanotime () -> u64)
  (extern print_int_u64 (int u64) -> void)
  
  (define (main)
    (let start (nanotime))
    (let img (kernel ((i (iota 1024)))
               (kernel ((j (iota 1024)))
                 (let cr
                     (+ (* (/ (int->float j) 512.0)
                          0.000009349778)
                       -1.373120668462))
                 (let ci
                     (+ (* (/ (int->float i) 512.0)
                          0.000009349778)
                       -0.084468836480))
                 (let xr 0.0)
                 (let xi 0.0)
                 (let idx 0)
                 (let escape 0)
                 (while (< idx max_iter)
                   (let xrp (+ (- (* xr xr) (* xi xi)) cr))
                   (let xip (+ (* 2.0 (* xr xi)) ci))
                   (set! xr xrp)
                   (set! xi xip)
                   (let m (+ (* xr xr) (* xi xi)))
                   (if (< m 4.0)
                       ;; Why do the pixels all turn white
                       ;; if I just do (set! escape idx)?
                       (set! escape (- idx 1)))
                   (set! idx (+ idx 1)))
                 (/ (* escape 256) max_iter))))
    (let stop (nanotime))
    (write-pgm "test.bin/mandelbrot.pgm" img)
;;    (print_int_u64 max_iter (/ (- stop start) 1000000))
    (print max_iter)
    (print "\t")
    (print (/ (- stop start) 1000000))
    (return 0)))

