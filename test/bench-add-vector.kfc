;; Vector sum

(%testspec
 (%tags bench))

(module
  (extern nanotime () -> u64)

  (define (add-vectors xs ys)
    (kernel ((x xs) (y ys)) (+ x y)))
  
  (define (bench_length len)
    (let ((xs (make-vector len 1.0))
          (ys (make-vector len 1.0)))
      (let* ((start (nanotime))
             ;;(sum (add-vectors xs ys))
             (sum (kernel ((x xs) (y ys)) (+ x y)))
             (stop (nanotime)))
        (print len)
        (print "\t")
        (println (/ (- stop start) 1000)))))
    
  (define (main)
    (for (i 1 90)
      (bench_length (* i 1000000)))
    (return 0)))
